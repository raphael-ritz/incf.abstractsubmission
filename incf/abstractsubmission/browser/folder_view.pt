<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main"
           tal:define="kssClassesView context/@@kss_field_decorator_view;
                       getKssClasses nocall:kssClassesView/getKssClassesInlineEditable;
                       templateId template/getId;
                       abstracts view/getAbstractsForCurrentMember|nothing;">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="documentFirstHeading"> 
            <metal:field use-macro="python:here.widget('title', mode='view')">
            Title
            </metal:field>
        </h1>

        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <p class="documentDescription">
            <metal:field use-macro="python:here.widget('description', mode='view')">
            Description
            </metal:field>
        </p>

        <div tal:replace="structure provider:plone.abovecontentbody" />

	<div tal:condition="not:here/getOpen">
          <metal:field use-macro="python:here.widget('introductionClosed', mode='view')">
            Body text
          </metal:field>
	</div>


	<div tal:condition="python:here.getOpen() and view.isAnonymous">
          <metal:field use-macro="python:here.widget('introductionOpenAnonymous', mode='view')">
            Body text
          </metal:field>
	  <div class="formControls">
		  <form id="login"
			action="login_form"
			method="post">
		    <input class="context"
			   type="submit"
			   value="login"
			   name="login">
		  </form>
	    <p>
	    If you do not have an INCF account please sign up first.
	    </p>
		  <form id="register"
			action="http://www.incf.org/join_form"
			method="post">
		    <input class="context"
			   type="submit"
			   value="sign up"
			   name="register">
		  </form>
	  </div>
	</div>



	<div tal:condition="python:here.getOpen() and not view.isAnonymous">
          <metal:field use-macro="python:here.widget('introductionOpenAuthenticated', mode='view')">
            Body text
          </metal:field>
	  <div class="formControls">
	      <form id="create"
	            action="createObject"
	            method="post">
	      <input class="context"
		     type="submit"
		     value="New Abstract"
		     name="create">
	      <input class="hidden"
		     type="hidden"
		     name="type_name"
		     value="Abstract">
	      </form>
	    <p>
	    Please make sure that your profile data are up-to-date.
	    </p>
	    <form id="view_profile"
	        action="http://www.incf.org/community/people/"
	        method="post"
	        tal:attributes="action view/profileUrl">
	      <input class="context"
	          type="submit"
	          value="View INCF profile"
	          name="view_profile">
	    </form>
	  </div>
	</div>

	<div tal:condition="python:abstracts">
	  <h3>My Abstracts</h3>
	  <ul tal:condition="abstracts">
	    <li tal:repeat="abstract abstracts">
	      <a href="#"
	         tal:attributes="href abstract/getURL"
	         tal:content="abstract/Title">title linked to item</a>
	    </li>
	  </ul>
	  <p tal:condition="python:not abstracts">Nothing submitted so far.</p>
	</div>

        <div metal:use-macro="here/document_relateditems/macros/relatedItems">
            show related items if they exist
        </div>
    
        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</metal:main>

</body>
</html>

